hovered-highlight-background-color = #f5f5f5
active-highlight-background-color = #fff

.screenshot-box
  a
    img
      width 100%

  .zoom-icon
    cursor pointer
    sprite(0px, 0px, 74px, 74px, "/shared/img2/zoom.png")
    absolute(top 40% left 45%)
    transition opacity tspeed ease 0s
    opacity 0

  &:hover .zoom-icon
    opacity 1         
    
.showcase
  relative(left 54px)

.screenshot-controls
  absolute(left 404px top 560px)

  .navi
    a
      cursor pointer
      display block
      background-color #ccc
      width 10px
      height 10px
      border-radius 5px
      float left
      margin 2px
      outline none

    a:hover
      opacity 0.6
      background-color #999

    a.active
      background-color #666


.highlights
  relative(left 120px)
  margin-top 20px
    
.highlight
  width 290px
  position relative
  border-radius 3px
  padding 5px
  display inline-block
  
  .highlight-icon
    float left
    margin-right 10px
    padding 2px
    border-radius 5px
    background-color #fff
    display block
    transition all tspeed ease 0s
    border 1px solid #ccc
    opacity 0.7
  
  .highlight-icon div
    width: 60px;
    height: 60px;

  .highlight-icon .thumb-tabs
    background-image: url('/images/thumb-tabs.png');

  .highlight-icon .thumb-dual
    background-image: url('/images/thumb-dual.png');

  .highlight-icon .thumb-fot
    background-image: url('/images/thumb-fot.png');

  .highlight-icon .thumb-ssf
    background-image: url('/images/thumb-ssf.png');

  .highlight-icon .thumb-visor
    background-image: url('/images/thumb-visor.png');

  .highlight-icon .thumb-asepsis
    background-image: url('/images/thumb-asepsis.png');

  .highlight-icon .thumb-stabs
    background-image: url('/images/thumb-stabs.png');

  .highlight-icon .thumb-cut
    background-image: url('/images/thumb-cut.png');

  .highlight-icon .thumb-term
    background-image: url('/images/thumb-term.png');

  .highlight-content h3
    margin 0
    margin-top 2px
    margin-bottom 6px
    font highlight-title-font
    color highlight-title-color
    text-shadow #FFF 0px 1px 1px
    line-height 15px

  .highlight-content p
    margin: 0;
    font highlight-text-font
    color highlight-text-color
    text-shadow #FFF 0px 1px 1px
    line-height 14px

.highlight-selectable
  cursor pointer

  &:hover
    background-color hovered-highlight-background-color

  &:hover:after, :hover:before
    left 100%
    top 50%
    border solid transparent
    content " "
    height 0
    width 0
    position absolute
    pointer-events none

  &:hover:after
    border-left-color hovered-highlight-background-color
    border-width 36px
    margin-top -36px    
    
  &.active
    background active-highlight-background-color !important

  &.active:after, .active:before
    left 100%
    top 50%
    border solid transparent
    content " "
    height 0
    width 0
    position absolute
    pointer-events none

  &.active:after
    border-left-color active-highlight-background-color !important
    border-width 36px
    margin-top -36px
    