html
  height 101%

body
  background #f2f2f2 url('/shared/img2/background.png') repeat top left
  font basic-font
  
a
  color link-color
  text-decoration none
  transition color tspeed ease 0s
  
a:hover,
a:focus
  color selection-color !important
  
.container
  relative() // important for absolute positioned elements inside main area

.clear
  clear: both
  
li
  line-height 18px
  
h1, h2, h3, h4, h5, h6
  margin-top 30px
  margin-bottom 10px
  
h2 
  font-size 20px

h3 
  margin-top 12px
  font-size 16px

h4
  margin-top 10px

h5, h6
  margin-top 6px

  
p
  font-size 13px
  line-height 18px

pre
  border:1px solid #000;
  box-shadow: rgba(0, 0, 0, 0.75) 0 2px 5px;
  border-radius: 3px;
  margin: 1em 0 !important;
  background-color: rgb(41,41,41) !important;
  padding: 10px !important;
  overflow: auto !important;

code
  font-family: monospace;
  font-size: 12px;
  line-height: 1em;
  background-color: #f8f8ff !important;
  color: #444 !important;
  padding: 1px 4px !important;
  border: 1px solid #dedede !important;
  border-radius: 2px
  whitespace: nowrap

pre > code
  color: #ddd !important;
  font-weight: bold;
  padding: 0 !important;
  background-color: rgb(41,41,41) !important;
  border: none !important;
  whitespace: pre;
  
.generic-separator
  height 1px
  box-shadow: rgba(255, 255, 255, 0.75) 0 1px 1px;
  background-color #ddd
  relative()
  