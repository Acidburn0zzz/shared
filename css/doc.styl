header-section-height = 40px
header-section-margin-top = 20px
sidebar-background-color = #f8f8f8
doc-side-text-size = 12px
doc-side-text-weight = bold
doc-side-text-family = inherit
doc-side-title-color = #999
doc-side-title-size = 12px
doc-side-title-weight = bold
doc-side-title-family = inherit
doc-main-title-color = #393d44
doc-main-title-weight = bold
doc-text-size = 20px
doc-text-weight = normal
inlined-box-margin = 0 0 16px 0
doc-info-box-text-size = 12px

.doc-content
  margin-top 30px

  .doc-back-link
    padding 4px 6px
    font-size doc-side-text-size
    border-radius 2px
    border 1px solid #ddd

    img
      display inline-block
      background-color transparent
      width 20px
      position relative
      top -2px

    span
      margin-left 4px

  .sidebar
    margin-bottom 40px

    .content-sidebar
      background-color sidebar-background-color
      border-radius 4px
      padding 12px 20px
      box-shadow 0 0 4px #aaa

    h2 // sidebar titles
      text-transform uppercase
      margin-top 20px
      margin-bottom 8px
      color doc-side-title-color
      font-size doc-side-title-size
      font-weight doc-side-title-weight
      font-family doc-side-title-family
      text-shadow #FFF 0 1px 1px

    ul, ol
      list-style-type none
      margin-left 0
      padding-left 10px

    li // sidebar text
      font-size doc-side-text-size
      font-weight doc-side-text-weight
      font-family doc-side-text-family

      a
        padding 1px 6px
        transition none
        border 1px solid transparent
        text-decoration none !important
        white-space nowrap

      a:hover
        border-color link-color !important

    li.selected
      a
        background-color link-color
        color menu-item-selected-color !important
        border-radius 2px

.doc-page
  .header-content
    margin 0 20px

    .title
      margin-top 0
      margin-bottom 0
      color doc-main-title-color
      font-weight doc-main-title-weight
      text-shadow #FFF 0 2px 1px

  .page-content
    position: relative
    margin 20px

    .keyboard-shortcuts
      display flex

    .keyboard-shortcuts > table
      display inline-block
      width auto
      box-shadow 0 0 4px #999
      margin-bottom 0
      border-radius 2px

    .info-box
      border solid 1px #ccc
      box-shadow 0 0 2px #aaa
      margin-left 1px // offset the box shadow
      background-color: #fff
      border-radius 2px
      padding 8px 10px
      font-size doc-info-box-text-size

      .choice
        margin-top 10px

      .example
        color #999
        padding-left 14px

      .note
        font-size 10px
        color #999

    .exclamation
      color #fff
      background-color #c00 !important

    .compatibility
      background-color #fffab3

    .doc-image
      border-radius 5px
      box-shadow 0 0 2px #666

    .add-shadow
      box-shadow 0 0 10px #999
      margin-left 4px

    .no-background
      background-color transparent

    .no-shadow
      box-shadow none

    .doc-inline-image
      display block
      position: relative
      left: -30px
      top: -20px
      margin-bottom: -40px

    .doc-inline-image-50
      display block
      position: relative
      left: -15px
      top: -10px
      margin-bottom: -40px
      width 50%

    .doc-side
      margin-top 30px
      width 280px
      float left

    .doc-side-inner
      transform scale(0.7)
      transform-origin 0 0

    .doc-side h2
      margin-top: 2px;

    .doc-col
      margin-right 20px
      width 500px
      float left

    .terminal
      box-shadow 0 0 10px #999
      margin-left 4px
      background-image url('../img/terminal.png')
      background-size 805px 310px
      background-repeat no-repeat
      background-color transparent
      border none
      border-radius 5px
      color white
      font-size 10px
      padding-top 40px

      &:before
        content '$ '
        color #999
      
      &.wide
        width 1000px
        background-image url('../img/terminal-wide.png')
        background-size 1000px 310px

    .terminal-help
      text-align right
      margin-top -14px
      font-size 10px
      margin-bottom 10px

      a
        margin-right 16px

      .terminal-details
        position relative 
        top -14px
        left 26px
        text-align left
        width 460px

