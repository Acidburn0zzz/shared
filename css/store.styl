#store-variation-selection-body
  width 300px !important

.store-security
  display none

.core-window
  margin 24px 20px 20px 20px
  color #666

  .core-section
    relative()

  .core-section-header
    border-bottom 1px solid #ccc
    font-size 16px
    font-weight bold
    padding-top 0px
    margin-bottom 20px

  .core-section-body
    padding 0
    padding-left 10px

  .core-form-field-group-header
    margin-top 20px
    margin-bottom 16px
    font-size 14px
    border-bottom 1px solid #eee

  .core-form-field-group-body
    margin-left 10px

  .core-form-field
    font-size 12px

    label
      font-weight normal

  .core-form-field-label
    width 90px
    whitespace nowrap

.store-box
  font store-font
  background-color #fff
  border-radius 12px
  border 1px solid #ddd7d7
  box-shadow 1px 1px 8px #ddd
  margin auto
  margin-top 58px
  margin-bottom 30px
  width 660px
  text-align left
  relative()

  .store-header
    border-radius top 12px
    height 50px
    border-bottom 1px solid #e9e9e9
    background-color #f7f7f7
    background linear-gradient(top, #fff, #f7f7f7)
    relative()

    .store-header-title
      color store-header-color
      font store-header-font
      line-height 50px
      margin-left 20px

  .store-tools
    absolute(top 4px right 22px)

  .store-product-option-title
    table
      width 300px

  .store-product-detail-description-pricing
    margin-top 0
    float right

  .store-product-option-display
    color store-product-title-color
    font-weight bold !important
    font-size 16px

  .store-product-option-price
    text-align right
    display inline-block

  .store-action-command
    padding 0 !important

  hr
    border-top 1px solid #eee

  code
    font-size 12px !important

  ul
    margin 0px !important
    list-style-type none !important

  .core-messages

    ul
      padding 2px 10px

    li
      background none !important
      padding 0px  !important

  input
    border-radius 5px !important
    border 1px solid #d5d5d5 !important
    color #666 !important
    background none !important
    background-color #fff !important

  select
    width 100%

  .store-value-money
    white-space nowrap
    font-weight bold
    color #000

  .store-product-pricing-tiered-table
    border 1px solid #ddd
    font-size 12px
    line-height 18px

    td
      padding 0 6px

    th
      padding 0 6px
      border-bottom 1px solid #ddd
      background-color #eee

  .store-order-pricing
    margin 0
    padding-top 10px
    border-top 1px solid #e5e5e5
    relative(top -1px)

    .store-section-vat-exemption
      white-space nowrap
      font-size 12px
      absolute(right 300px top 28px)

      input
        margin-left 26px
        width 80px

    .store-order-price-label
      font-weight normal
      color #999

  .store-section-customer-details
    .core-form-field-area-right,
    .core-form-field-area-left
      width 300px

    .core-form-field-area-right
      relative(left 30px)

    input,
    select
      float right
      width 180px
      margin 3px 0
      relative(top -26px)

    .core-form-field-body-note
      float right
      width 180px
      color #aaa
      relative(top -22px)

  .store-payment-method-title
    display inline-block

  .store-payment-method-list
    list-style-type none

  .store-action-next,
  .store-action-complete,
  .store-product-detail-action-order
    .store-action-command
      border none !important
      background none !important

    .store-action-title
      text-align center
      color store-product-button-color
      font store-product-button-font
      display inline-block
      margin 0
      background-color #399fd2
      background linear-gradient(top, #399fd2, #2688c5)
      border 1px solid #2381bf
      border-radius 7px
      white-space nowrap
      padding 5px 8px
      text-transform uppercase
      text-shadow #226699 0px 1px 2px
      box-shadow 0px 1px 2px #999
      height auto !important

      &:hover
        color #FEF79A

  .store-order-action-edit
    display none

  .store-order-item-action-edit
    display none

  .store-order-item-child
    display none

.store-order-item-group
  padding-top 10px !important
  padding-bottom 2px
  padding-left 2px
  margin 0 !important
  margin-top 10px !important
  border-top none !important
  border-bottom 1px dashed #e5e5e5
  relative()

  .store-order-item-group-action-list
    absolute(top 8px right 120px)

.store-action
  .store-action-title
    font-size 11px
    display inline-block
    height 16px

.store-product-detail-offer-title,
.store-order-item-offer-title
  font-size 11px
  display inline-block
  height 16px

.store-order-action-list
  margin 0
  padding 0
  clear both

  .store-order-action-more
    absolute(top -28px left 2px)
    display none

.store-payment-method-list
  padding 0
  margin 0

  li
    margin-top 6px !important
    margin-bottom 0px

.store-order-action-coupon
  absolute()

  & > *
    relative(top -26px)

  .store-action-title
    margin-right 8px
    margin-left 16px

.store-page-navigation
  display: block;
  margin 0
  padding 0
  padding-top 10px
  clear both
  border none

  .store-action-list
    margin 0 !important
    padding 0 !important
    display inline-block

.store-volume-pricing
  font-size 15px
  text-align center

.store-product-detail
  relative()
  height 70px

  // have to use absolute positioning to make it look like I want
  .store-product-detail-image
    absolute(left 0px top 0px)

    img
      padding 0
      display block
      width 64px
      height 64px

  .store-product-detail-title
    absolute(left 80px top 10px)
    margin 0
    padding 0
    color store-product-title-color
    font store-product-title-font

  .store-product-detail-description
    absolute(left 80px top 28px)
    margin 0
    padding 0
    color store-product-description-color
    font store-product-description-font

  .store-product-detail-pricing
    absolute(right 0px top 16px)
    margin 0
    padding 0

  .store-product-detail-quantity
    absolute(right 0px top 40px)
    margin 0
    padding 0

  .store-product-detail-offers
    absolute(right -6px top 65px)
    margin 0
    padding 0

  .store-product-detail-description-pricing
    absolute(right 0px top 110px)
    margin 0
    padding 0

  .store-product-pricing-tiered-table
    td, th
      padding 0 6px

.store-footer
  padding-top 20px
  margin-top 30px
  border-top 1px solid #eee
  font-size 10px
  color #999

.store-portal
  .store-page-navigation
    absolute(right 0px top 30px)

.store-section-payment-details-cc
  .core-form-field-group-body .core-clearfix > *
    margin-top 0
    margin-right 50px
    float left

  .store-field-cc-number
    relative()

    .core-form-field-body-note
      display none

.store-section-payment-details-billing
  #ccShippingAddressDisplay
    font-size 12px
    line-height 18px

    div:first-child
      display inline-block
      padding 6px 10px
      background-color #eee
      border 1px solid #ddd
      border-radius 3px
