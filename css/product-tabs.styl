#main-tabs
  relative()
  
.tab-bar
  text-align center
  width 100%
  absolute(top -29px)
  overflow hidden
  max-height 30px

.tabs
  text-shadow 1px 1px 0px #fff
  list-style none
  margin 0
  padding 0  
  clear both
  border-bottom 1px solid #ddd7d7
  display inline-block

  li
    float left
    text-indent 0
    padding 0
    margin 0
    list-style-image none !important
    margin-right 8px
    
  a
    relative(top 0px)
    text-shadow 1px 1px 0px #fff
    font-weight bold
    font-size 14px
    display block
    height 30px  
    line-height 30px
    width 110px
    text-align center
    text-decoration none
    color #666
    padding 0px
    margin 0px
    border-radius top 4px
    border 1px solid #ddd7d7
    outline none
    background-color #f7f7f7

    .shadow
      absolute(bottom -29px left 0px)
      right 0px
      box-shadow 0px 0px 4px #aaa
      height 30px

  a:hover
    color:#000;
    background-color: #f5f5f5;
    
  li.current
    .shadow
      display none

  a.current, 
  a.current:hover
    cursor:default !important; 
    border: 1px solid #ddd7d7;
    border-bottom: 1px solid #fff;
    background-color: #fff;
    color:#000 !important;
    
    .shadow 
      display none
    

.panes
  border: 1px solid #ddd7d7;

  background-color: #fff;
  border-radius 8px
  text-align left
  margin-top 90px
  box-shadow 0px 1px 3px #ddd

  .pane
    display none

  > div
    display none
    padding 20px
