.product-tabs
  border: 1px solid #ddd7d7;

  background-color: #fff;
  border-radius 4px
  border-radius top left 0
  text-align left
  margin-top 60px
  box-shadow 0 1px 3px #ddd

  > div
    padding 10px
    margin-top -10px !important

  @media (min-width: 992px)
    .ui-tabs-nav
      relative(top -30px left -5px)
      text-shadow 1px 1px 0 #fff
      list-style none
      margin 0
      padding 0
      display inline-block
      overflow hidden

      li
        outline none
        float left
        text-indent 0
        padding 0
        margin 0
        margin-left 4px
        list-style-image none !important
        margin-right 16px
        box-shadow 0 1px 3px #ddd

      a
        outline none
        relative(top 0)
        text-shadow 1px 1px 0 #fff
        font-weight bold
        font-size 14px
        display block
        height 30px
        line-height 30px
        min-width 110px
        text-align center
        text-decoration none
        color #666
        padding 0 20px 0 20px
        margin 0
        border-radius top 4px
        border 1px solid #ddd7d7
        outline none
        background-color #f7f7f7
        overflow hidden

        .shadow
          absolute(bottom -10px left 0)
          right 0
          box-shadow 0 0 3px #ddd
          height 10px

      a:hover
        color: #000;
        background-color: #f5f5f5;

      .ui-tabs-active
        a, a:hover
          cursor default !important
          border 1px solid #ddd7d7
          border-bottom 0
          background-color #fff
          color #000 !important

        .shadow
          display none

  @media (max-width: 992px)
    .ui-tabs-nav
      text-shadow 1px 1px 0 #fff
      margin-top 10px
      margin-bottom 20px

      li
        outline none
        text-indent 0
        padding 0
        margin 0
        margin-left 4px
        margin-right 8px

      a
        outline none
        font-size 14px
        font-weight bold
        text-decoration none

        .shadow
          display: none

      .ui-tabs-active
        a, a:hover
          cursor default !important
          color black !important
          
