#product-totalfinder
    margin-top 50px
    min-height 350px
    
    .main-product-left
    
        .product-logo-box
            relative()
            padding-top 10px
            padding-right 20px
            padding-left: 85px;
    
            .product-icon
                absolute(left 0px)
                width: 64px;
                height: 64px;
        
            .product-title
                font product-title-font
                color: product-title-color
                text-shadow #FFF 0px 1px 1px
                line-height 40px
                margin 0px
                margin-top 2px
        
            .product-subtitle
                font product-subtitle-font
                color product-subtitle-color
                text-shadow #FFF 0px 2px 1px
                line-height 20px

            .facebook-like-box
                margin 0px
                margin-top 16px
                min-height 40px
        
        .product-buttons-box
            margin-top: 14px;
            margin-left: 85px;
            relative()
            
            .product-click-here
                sprite(370px, 10px, 80px, 30px)
                absolute(top 28px left -94px)
        
            .product-buttons
                relative()
                width 302px
                
                .button
                    width 100%
        
                .product-button-play
                    product-button(-16px, 244px)

                .product-button-download
                    overflow hidden
                    product-button(-16px, 302px)

                .product-button-buy
                    product-button(-16px, 358px)
            
                .price-tag
                    sprite(464px, 255px, 70px, 30px)
                    absolute(right -14px top 10px)
            
                .reasons-to-buy
                    text-align: right;
                    text-shadow #FFF 0px 1px 1px
                    font-size 10px;

                    a
                        color #8d9198

    .main-product-right
        relative()
        
        // this is just something generated by slideshow plugin
        .product-thumbs-box 
            display none
            
        .teaser-button
            absolute(top 330px left 160px)
            
            div
                sprite(283px, 154px, 18px, 18px)
                cursor pointer 
            
        .navi-hint
            sprite(480px, 10px, 130px, 30px)
            absolute(top 328px left 284px)

        .navi
            absolute(top 332px left 190px)

            a
                sprite(299px, 127px, 12px, 12px)
                relative()
                float left
                margin 2px
                outline none

            a:hover
                outline: none;
                sprite(284px, 127px, 12px, 12px)
                relative()
                
            a.active
                outline: none;
                sprite(284px, 127px, 12px, 12px)
                relative()

        .main-screenshot
            relative(top 10px)
            
            .screenshot-box
                absolute()
                width 470px
                height 310px
                background #f2f2f2 url('/shared/img2/screenshot-shadow.png') repeat top left;
            
                .overlayable
                    display block
                    absolute(left 9px top 4px)
                    overflow hidden
                    width 452px
                    height 293px

                &.no-shadow 
                    background none
                    
                    .overlayable
                        overflow visible
                
                img
                    absolute(left -24px top -14px)
            
                &:hover .zoom-icon
                    cursor pointer
                    sprite(709px, 216px, 85px, 85px)
                    absolute(top 120px left 190px)

#content-totalfinder
    margin-top 20px
    relative()

    .features-separator
        sprite(0px, 430px, 950px, 30px)
        relative()

    .highlights
        margin-top 0px

        .highlight.last
            margin-right 0px

        .highlight
            background none
            float left
            width 290px
            margin-right 40px
            margin-top 0px
        
            .highlight-icon
                float left
                padding 2px
                border 1px solid #ccc
                border-radius 5px
                background-color #fff
                margin-right 20px

            .highlight-icon div
                width: 60px;
                height: 60px;

            .highlight-icon .thumb-tabs
                background-image: url('/images/thumb-tabs.png');

            .highlight-icon .thumb-dual
                background-image: url('/images/thumb-dual.png');

            .highlight-icon .thumb-fot
                background-image: url('/images/thumb-fot.png');

            .highlight-icon .thumb-ssf
                background-image: url('/images/thumb-ssf.png');

            .highlight-icon .thumb-visor
                background-image: url('/images/thumb-visor.png');

            .highlight-icon .thumb-asepsis
                background-image: url('/images/thumb-asepsis.png');

            .highlight-icon .thumb-stabs
                background-image: url('/images/thumb-stabs.png');

            .highlight-icon .thumb-cut
                background-image: url('/images/thumb-cut.png');

            .highlight-icon .thumb-term
                background-image: url('/images/thumb-term.png');

            .highlight-content h3
                margin 0
                margin-top 6px
                margin-bottom 6px
                font highlight-title-font
                color highlight-title-color
                text-shadow #FFF 0px 1px 1px
                line-height 15px

            .highlight-content p
                margin: 0;
                font highlight-text-font
                color highlight-text-color
                text-shadow #FFF 0px 1px 1px
                line-height 17px

        .highlight-separator
            clear both
            height 30px

    .generic-separator
        sprite(0px, 456px, 950px, 28px)
        relative()
        margin-top 26px
    
    .more-info
        margin-top 12px
    
        .product-button-doc
            minor-button(452px, 309px)
            width 290px
            margin-right 34px
        
        .product-button-changes
            minor-button(450px, 353px)
            width 290px
