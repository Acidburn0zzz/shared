#product-totalfinder
    margin-top 50px
    min-height 350px
    
    .main-product-left
    
        .product-logo-box
            relative()
            padding-top 10px
            padding-right 20px
            padding-left: 85px;
    
            .product-icon
                absolute(left -6px)
                width: 64px;
                height: 64px;
        
            .product-title
                font product-title-font
                color: product-title-color
                text-shadow #FFF 0px 1px 1px
                line-height 40px
                margin 0px
                margin-top 2px
        
            .product-subtitle
                font product-subtitle-font
                color product-subtitle-color
                text-shadow #FFF 0px 2px 1px
                line-height 20px

            .facebook-like-box
                margin 0px
                margin-top 16px
                min-height 40px
        
        .product-buttons-box
            margin-top: 14px;
            margin-left: 85px;
            relative()
            
            .product-click-here
                sprite(370px, 10px, 80px, 30px)
                absolute(top 28px left -90px)
        
            .product-buttons
                relative()
                width 302px
                
                .button
                    width 100%
        
                .product-button-play
                    product-button(-16px, 244px)

                .product-button-download
                    overflow hidden
                    product-button(-16px, 302px)

                .product-button-buy
                    product-button(-16px, 358px)
            
                .price-tag
                    sprite(464px, 255px, 70px, 30px)
                    absolute(right -14px top 10px)
            
                .reasons-to-buy
                    text-align right
                    text-shadow #FFF 0px 1px 1px
                    font-size 10px
                    line-height 12px
                    
                    a
                        color minor-link-color

    .main-product-right
        relative()
        
        // this is just something generated by slideshow plugin
        .product-thumbs-box 
            display none

        .screenshot-controls
            absolute(top 330px left 40px)

            .teaser-box
                absolute(top 0px left 30px)
            
                .teaser-hint
                    sprite(626px, 10px, 88px, 30px)
                    absolute(top 0px left 0px)

                .teaser-button
            
                    div
                        transition opacity 0.33s ease 0s
                        opacity 0.6
                        sprite(279px, 152px, 23px, 23px)
                        absolute(top 0px left 96px)
                        cursor pointer 
                        
                        &:hover
                            opacity 1

                .teaser-separator
                    sprite(310px, 148px, 8px, 38px)
                    absolute(top -8px left 130px)
                    opacity 0.2
            

            .navi-box
                absolute(top 4px left 178px)
                width 100px

                .navi-hint
                    sprite(480px, 10px, 130px, 30px)
                    absolute(top 0px left 90px)
                
                .navi
                    a
                        sprite(299px, 127px, 12px, 12px)
                        relative()
                        float left
                        margin 2px
                        outline none

                    a:hover
                        outline none
                        opacity 0.6
                        sprite(284px, 127px, 12px, 12px)
                        relative()
                
                    a.active
                        outline: none;
                        sprite(284px, 127px, 12px, 12px)
                        relative()

        .main-screenshot
            relative(top 10px)
            
            .screenshot-box
                absolute()
                width 470px
                height 310px
                background #f2f2f2 url('/shared/img2/screenshot-shadow.png') repeat top left;
            
                .overlayable
                    display block
                    absolute(left 9px top 4px)
                    overflow hidden
                    width 452px
                    height 293px

                &.no-shadow 
                    background none
                    
                    .overlayable
                        overflow visible
                
                img
                    absolute(left -24px top -14px)
            
                .zoom-icon
                    cursor pointer
                    sprite(709px, 216px, 85px, 85px)
                    absolute(top 120px left 190px)
                    transition opacity 0.33s ease 0s
                    opacity 0
                    
                &:hover .zoom-icon
                    opacity 1
                    

#content-totalfinder
    margin-top 40px
    relative()

    .features-separator
        sprite(0px, 430px, 950px, 30px)
        relative()

    .highlights
        margin-top 0px

        .highlight.last
            margin-right 0px

        .highlight
            background none
            float left
            width 290px
            margin-right 40px
            margin-top 0px
        
            .highlight-icon
                float left
                margin-right 20px
                padding 2px
                border-radius 5px
                background-color #fff
                display block
                transition all 0.33s ease 0s
                border 1px solid #ccc
                opacity 0.7
                
                &.hoverable:hover
                    opacity 1
                    border-color selection-color

            .highlight-icon div
                width: 60px;
                height: 60px;

            .highlight-icon .thumb-tabs
                background-image: url('/images/thumb-tabs.png');

            .highlight-icon .thumb-dual
                background-image: url('/images/thumb-dual.png');

            .highlight-icon .thumb-fot
                background-image: url('/images/thumb-fot.png');

            .highlight-icon .thumb-ssf
                background-image: url('/images/thumb-ssf.png');

            .highlight-icon .thumb-visor
                background-image: url('/images/thumb-visor.png');

            .highlight-icon .thumb-asepsis
                background-image: url('/images/thumb-asepsis.png');

            .highlight-icon .thumb-stabs
                background-image: url('/images/thumb-stabs.png');

            .highlight-icon .thumb-cut
                background-image: url('/images/thumb-cut.png');

            .highlight-icon .thumb-term
                background-image: url('/images/thumb-term.png');

            .highlight-content h3
                margin 0
                margin-top 6px
                margin-bottom 6px
                font highlight-title-font
                color highlight-title-color
                text-shadow #FFF 0px 1px 1px
                line-height 15px

            .highlight-content p
                margin: 0;
                font highlight-text-font
                color highlight-text-color
                text-shadow #FFF 0px 1px 1px
                line-height 17px

        .highlight-separator
            clear both
            height 30px

    .generic-separator
        sprite(0px, 456px, 950px, 28px)
        relative()
        margin-top 26px
    
    .more-info
        margin-top 12px
    
        .product-button-doc
            minor-button(452px, 309px)
            width 290px
            margin-right 34px
        
        .product-button-changes
            minor-button(450px, 353px)
            width 290px
