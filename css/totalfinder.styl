#page-totalfinder-index
  .product-icon
    top -14px

  .product-button-buy
    i
      color desaturate(red, 60)

    &:hover
      i
        color red

  .product-button-download
    i
      color #658bbb

    &:hover
      i
        color saturate(#658bbb, 60)

  .product-button-buy // needed to have same dimmensions as .product-button-download
    width 254px
    overflow hidden

  .product-button-download
    width 254px // we need some extra space for trial-note
    overflow hidden

  .product-content
    margin-top 20px
    relative()

    .button
      minor-button()
      margin-right 20px

    @media (min-width: 1200px)
      .manual-button-box
        relative(left highlights-shift)
