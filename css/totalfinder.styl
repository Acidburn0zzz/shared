  margin-top 20px
  relative()

  .button
    minor-button()
    margin-right 20px
    
    
  @media (min-width: 1200px)
    .manual-button-box
      relative(left highlights-shift)

.product-button-buy
  overflow hidden // needed to have same dimmensions as .product-button-download
    
.product-button-download
  width 260px // we need some extra space for trial-note
  overflow hidden // needed for trial-note