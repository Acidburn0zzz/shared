#buy.overlay

  .overlay-content
    margin 20px 25px
    padding 0px

  .explanation-box
    float left
    width 242px
    height 360px
    text-align center
    padding 10px 20px
    min-height 340px
    border 1px solid #d3d3d3
    border-radius 4px
    background-color #f1f1f1
    relative()
    
    &:hover
      text-decoration none !important
      background-color #f7f7f7
      
  .title
    margin-top 8px
    font-size 20px
    color #8d9198
    line-height 24px
    font-weight bold
    text-shadow #FFF 0px 2px 1px
    
  .image
    margin 0px auto

  .deal
    margin-top 10px
    margin-bottom 20px
    font-size 10px
    line-height 14px
    color #9699a0
    min-height 70px
    text-shadow #FFF 0px 1px 1px

  .button
    relative()
    popup-button()

  .buy-single 
    margin-right: 14px;

    .button
      width 174px
    
  .buy-pack
    .button
      width 190px