.doc-page
  .page-content
    h2
      margin-top 40px
      font-weight bold

    h2:first-child
      margin-top 0px
     
    h2:before,
    h2:after
      content: " "
      display: table

    h2:before
      clear both
    
    & > p
      padding-left 20px
     
    .keyboard-shortcuts
      width 400px
      background-color #fff
      border-radius 5px
      border 1px solid #aaa
      margin-bottom 20px

      table
        margin 0
        margin-left 10px
        margin-right 10px
        width 380px

      th
        border-bottom 1px solid #ccc

      td
        vertical-align top

    .keyboard-shortcuts.full
      width 690px
    
      table
        width 670px

    .license-desk
      box-shadow 0px 0px 4px #666
      margin-left 20px
      background-color: #fff
      border-radius 5px
      margin-bottom 10px
      padding 14px
      display inline-block
    
      .choice
        margin-top 10px
    
      .example
        font-size 11px
        color #999
        padding-left 10px
      
      .note
        font-size 11px
        color #999

    .exclamation
      font-weight bold
      color #fff
      background-color #a00
      display block

    .doc-pref
      position: relative
      max-width 500px
      top: -20px
      left: -26px

    .doc-image
      margin 10px 10px 20px 20px
      border-radius 5px
      box-shadow 0px 0px 2px #666
    
    .add-shadow
      box-shadow 0px 0px 10px #999
    
    .no-shadow
      box-shadow none

    .doc-inline-image
      display block
      position: relative
      left: -30px
      top: -20px
      margin-bottom: -40px

    .doc-inline-image-50
      display block
      position: relative
      left: -15px
      top: -10px
      margin-bottom: -40px
      width 50%
    
    .doc-main-image
      max-width 100%
      margin-bottom: 0px
    
    .doc-side
        margin-top 30px
        width 280px
        float left

    .doc-side-inner
        transform scale(0.7)
        transform-origin 0 0

    .doc-side h2
        margin-top: 2px;
    
    .doc-col 
        margin-right 20px
        width 500px
        float left
      