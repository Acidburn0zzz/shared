.betaswitch
  margin-bottom 20px

.changelogx
  body,h1,h2,h3,h4,p,table
    padding 0
    margin 0

  ol li
    margin-bottom 5px

  .release
    margin-bottom 20px
    padding-bottom 10px
    border-bottom 1px dashed #ccc

  h1
    font-size 12pt
    padding-top 5px
    padding-bottom 5px

  h2
    font-size 11pt
    padding-top 5px
    padding-bottom 5px

  p
    padding-top 5px
    padding-bottom 5px
    font-size 9pt
    line-height 14pt

  .infobox
    border 0px solid silver
    margin-bottom 10px
    clear both

  .infobox h3
    font-size 8pt
    border-bottom 1px solid silver
    background-color #e2ecfe
    padding 3px 5px
    color #000

  .changes
    margin 0 !important
    padding-left 30px
    list-style-type none
    padding-right 0px

  .changes li
    margin-bottom 1px
    clear both

  .titlebox
    line-height 20px

  h4
    minor-button()
    line-height 26px
    float left
    min-height 26px
    min-width 110px
    text-align center

    a
      padding 0px 6px 0px 6px
      text-decoration none
    
    a:before
      padding-right 6px
      display: inline-block;
      font-family: FontAwesome;
      font-style: normal;
      font-weight: normal;
      line-height: 1;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      content: "\f019"; // fa-download
    
    span
      padding 0px 6px 0px 32px

  h5
    margin 0
    font-size 11px
    color: #888
    line-height 11px
    font-weight normal
    padding-left 14px
    float left
    padding-top 20px

  .blog-post-pointer
    background-color #FCFFEA
    font-size 11px
    padding: 0px 3px
    margin-left 93px
    margin-top -44px
    absolute()
    border-radius 2px

  .sticker
    float left
    width 80px
    display block
    text-align right
    background none

  .sticker b
    color white
    font-weight bold
    padding 2px 6px 2px 6px
    border-radius 3px
    font-size 10px
    position relative
    text-transform uppercase
    top -1px

  .fixed b
    background-color #00A825

  .new b
    background-color #BCB901

  .removed b
    background-color #BC0E00

  .improved b
    background-color #0486BC

  .note b
    background-color #AEAEAE

  .known_bug b
     background-color #f98d02

  .info
    display table
    padding-left 16px
    
  .changes i
    color: #999;
    font-style: normal;
    font-size: 10px;
  
  .changes em
    font-style: normal;
    background-color: #FCFFDD;
    padding: 0px 2px;
    border: 1px solid #ccc;
    color: #999;
    border-radius: 2px;