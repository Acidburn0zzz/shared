menu-color = #6c717b
menu-selected-color = #000

#header
  height 90px
  background-color #f7f7f7
  background linear-gradient(top, #ffffff, #f7f7f7)
  border-bottom 1px solid header-separator-color
  box-shadow 0px 1px 5px #dadada
  
  .header-menu
    absolute(right 0px) // needed for responsive design, header should not break with small width
    margin-top 44px
    list-style-type none
    white-space nowrap
    
    li
      display block
      border-radius 4px
      menu-button()
      
      a
        color menu-color !important
      
      i 
        margin-right 6px
        
    li:hover
      border-bottom 2px solid #999
        
.menu-selected-store .menu-item-store,
.menu-selected-products .menu-item-products
.menu-selected-blog .menu-item-blog,
.menu-selected-support .menu-item-support
  border-bottom 2px solid !important
  
  a
    color menu-selected-color !important