price-tag-background-color = #ce0000
price-tag-color = #fff
price-tag-font-size = 18px
price-tag-dot-color = darken(price-tag-background-color, 20)

.price-tag
  relative(left 30px)
  padding 2px 6px
  color price-tag-color
  font-size price-tag-font-size
  text-shadow darken(price-tag-background-color, 30) 0px 1px 1px
  background price-tag-background-color
  border-left 1px solid price-tag-background-color
  border-bottom 1px solid price-tag-background-color
  border-radius 4px
  box-shadow 1px 1px 2px #999

.price-tag:after
  left -4px
  top 11px
  content " "
  height 5px
  width 5px
  border-radius 2px
  background-color price-tag-dot-color
  position absolute
  pointer-events none

.price-tag:before
  right 100%
  top 50%
  border solid transparent
  content " "
  height 0
  width 0
  position absolute
  pointer-events none

.price-tag:before
  border-right-color price-tag-background-color
  border-width 12px
  margin-top -12px  