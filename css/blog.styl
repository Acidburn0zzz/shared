blog-post-title-font = bold 24px font-name, arial, serif
blog-date-color = #ccc

#blog-welcome
  .page-icon
    position: absolute

#blog
  margin-top 30px
  
  code
    font-style: normal;
    background-color: #FCFFDD;
    padding: 0px 2px;
    border: 1px solid #ccc;
    color: #999;
    border-radius: 2px;    
  
  .posts
    padding 0px
    margin 0px
    list-style-type none

    .year
      color blog-date-color
      display block
      margin-top 30px
      margin-bottom 20px
      font-size 28px
      text-shadow #FFF 0px 1px 1px
      font-weight bold
    
    .post-title
      display block
      margin-left 40px
      text-shadow #FFF 0px 1px 1px
      margin-bottom 10px
      white-space nowrap

    .post-date
      color blog-date-color
      text-shadow #FFF 0px 1px 1px
      font-size 14px
      width 100px
      display inline-block
      
  
  .post-title
    font blog-post-title-font
    text-shadow #FFF 0px 1px 1px
    text-transform none
    display block
    
  .blog-leftbar
    padding-top 6px
    
  .back-button
    tiny-button()
    display inline-block
    text-align center
    width 100%
    
  .article-info
    font-size 10px
    text-align center
    line-height 14px
    margin-bottom 30px
    padding 8px 6px
    background-color #f7f7f7
    color #999
    border-radius 4px
    box-shadow 0px 0px 2px #aaa
    
    & > span
      display inline-block
      white-space nowrap
    
  .post-content 
    font-size 12px
    margin 20px
    
    // terminal-like
    pre
      border 1px solid #000
      box-shadow 0px 0px 10px #666
      border-radius 3px
      margin 1em 0
      margin-left 10px
      background-color rgb(41,41,41) !important
      padding 10px
      overflow auto

    code
      font-family monospace
      font-size 12px
      line-height 1em
      background-color #f8f8ff !important
      color #444 !important
      padding 1px 4px !important
      border 1px solid #dedede !important
      border-radius 2px
      whitespace nowrap

    pre > code
      display table
      color #ddd !important
      padding 0 !important
      background-color rgb(41,41,41) !important
      border none !important
      whitespace pre
    
    p
      margin-left 10px
      text-align justify

    .fluid-object
      margin-left 10px
        
    .intro-icon
      width 64px
      float left
      margin-right 16px
      margin-bottom 30px
      relative(top -6px)

    h2
      font-size: 18px;
      font-weight: bold;
      color: #000;
      margin-top: 50px;
      clear: both;
    
    h3
      font-size 16px
      font-weight bold
      color #000
      margin-top 40px
      clear both

    h4
      font-size 14px
      color #000
      margin-top 40px
      font-weight bold
      clear both
      
    h5
      font-size 14px
      color #000
      margin-top 20px
      font-weight normal
      clear both
        
    .blog-image
      display block
      width 100%
      border-radius 2px
      box-shadow 0px 0px 4px #aaa
      
    .footnote
      clear both
      display inline-block
      font-size 8pt
      color #999
      padding 2px 10px
      margin-top 20px
      margin-left 0px
      border-top 1px solid #ddd
      
  .blog-articles
    text-align: right;

  #comments
    margin-bottom: 20px;

  #post
    margin-bottom 50px

    .sub
      display: block;
      font-size: 9px;
      color: #666;
      font-weight: bold;
      padding-bottom: 4px;
      border-bottom: 1px solid #C3CBD3;

  .blog-side
    margin-top 40px
    
    .blog-side-box
      margin-bottom 40px
      
    .blog-side-follow
      relative()
      background-color #e9e9e9
      border 1px solid #cdcdcd
      border-radius 4px
      height 36px
      line-height 48px
      font-weight bold
      text-shadow #FFF 0px 1px 1px
      margin-bottom 10px
      width 250px
      opacity 0.5
      transition opacity tspeed ease 0s
      
      &:hover
        opacity 1

      .twitter-follow-button 
        margin 0px 10px
        
    .blog-side-subscribe
      relative()
      width 250px
      background-color #e9e9e9
      border 1px solid #cdcdcd
      border-radius 4px
      height 44px
      line-height 44px
      font-weight bold
      text-shadow #FFF 0px 1px 1px
      opacity 0.5
      transition opacity tspeed ease 0s

      &:hover
        opacity 1

      a
        color blog-post-title-color
      
      .blog-side-icon
        float: left;
        height: 28px;
        width: 28px;
        margin 8px 10px

      .blog-rss-icon
        background: transparent url('/shared/img/icons-blog.png') -29px 0 no-repeat;
      
      .subscribe-button
        absolute(top 0px left 120px)

    .blog-side-products
      line-height: 16px;
      border-bottom: none;
      opacity 0.5
      transition opacity tspeed ease 0s

      &:hover
        opacity 1

      .blog-side-product
        padding 8px 8px
        
        a
          text-decoration none !important

        img
          absolute()
          display block
          float left
          transition all 0.2s ease

        .title
          display block
          transition color tspeed ease 0s
          font-weight bold
          font-size 14px
          padding-top 5px
          line-height 14px
          padding-left 48px
          color product-title-color
          text-shadow #FFF 0px 1px 1px

        .info
          display block
          padding-left 48px
          font-size 10px
          line-height 12px
          font-weight normal
          color minor-link-color
          text-shadow #FFF 0px 1px 1px
          padding-bottom 2px
        
        &:hover .title
          color selection-color
          
        &:hover img
          transform scale(1.2)

  // http://blog.binaryage.org/totalfinder-alpha/
  .blog-download
    clear: both;
    margin-left 10px
    margin-top: 30px;
    margin-bottom: 30px;
    position: relative;

    img
      float: left;
      margin-right: 20px;
      margin-left: 2px;

    .download-link
      font-size: 18px;
      line-height: 50px;

    .download-link div
      display: inline;
      position: relative;
      top: -10px;

    .download-note
      position: absolute;
      left: 80px;
      top: 26px;