logo-badge-color = #686d76
logo-white-color = #fff
logo-orange-color = #f9a538

.binaryage-logo
  absolute() // needed for responsive design, header should not break with small width
  margin-top 6px
  opacity 0.2
  transition opacity tspeed ease 0s
  transform: scale(0.6)
  transform-origin: 0 0;
  
  .logo
    width 260px
    height 56px
    fill-rule: evenodd

    .logo-badge
      stroke-width 1
    
      .logo-badge-background
        fill logo-badge-color
    
      .logo-letter-b
        stroke darken(logo-badge-color, 20)
        fill logo-white-color
    
      .logo-letter-a
        stroke darken(logo-badge-color, 20)
        fill logo-orange-color
      
    .logo-label
      stroke none
    
      .logo-word-binary
        fill logo-badge-color

      .logo-word-age
        fill logo-orange-color
        
  &:hover
    opacity 1
    
@media logo-menu-not-clashing
  .binaryage-logo
    margin-top 32px
  